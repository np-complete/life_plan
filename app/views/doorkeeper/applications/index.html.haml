%h2.page-header Your applications

%p= link_to 'New Application', new_oauth_application_path

%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Callback url
      %th
      %th
  %tbody
    - @applications.each do |application|
      %tr(id="application_#{application.id}")
        %td= link_to application.name, [:oauth, application]
        %td= application.redirect_uri
        %td= link_to 'Edit', edit_oauth_application_path(application)
        %td= link_to 'Destroy', [:oauth, application], :data => { :confirm => 'Are you sure?' }, :method => :delete
