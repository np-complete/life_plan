!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "LifePlan"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "application", :media => "all"

  %body
    .navbar.navbar-fluid-top
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand(href="/") LifePlan
          .container.nav-collapse
            %ul.nav
              %li
                = link_to :root do
                  %i.icon-list-alt
                  スケジュール
              - if user_signed_in?
                %li
                  = link_to :channels do
                    %i.icon-cog
                    チャンネル設定
                %li
                  = link_to :titles do
                    %i.icon-cog
                    番組設定
            - if user_signed_in?
              %ul.nav.pull-right
                %li.dropdown
                  %a.dropdown-toggle(href="#" data-toggle="dropdown")
                    %i.icon-user
                    = current_user.name
                    .caret
                  %ul.dropdown-menu
                    %li
                      = link_to :sign_out do
                        %i.icon-remove
                        Sign out
            - else
              .nav.pull-right
                = link_to user_omniauth_authorize_path(:google_oauth2) do
                  %button.btn.btn-danger Sign in with Google

    .container-fluid
      .row-fluid
        .span12
          = bootstrap_flash
          = yield

      %footer
        %p &copy; Company 2013
    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
